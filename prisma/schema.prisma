// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // 또는 PostgreSQL, MySQL 등 사용하는 DB로 변경
  url      = env("DATABASE_URL")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique // 카테고리 이름 (예: 밥류, 음료)
  order     Int       @default(0) // 정렬 순서
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  menus     MenuItem[] // 1:N 관계
}

model MenuItem {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  image       String? // 이미지 URL (nullable)
  description String? // 메뉴 설명 (nullable)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id]) 
}